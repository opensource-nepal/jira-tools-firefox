{
	"manifest_version": 2,
	"name": "Jira Tools",
	"version": "0.1",
	"description": "For small jira actions such as opening jira ticket page.(For now)",
	"icons": {
		"96": "assets/icons/96.png",
		"48": "assets/icons/48.png",
		"24": "assets/icons/24.png"
	},
	"browser_action": {
		"default_popup": "main.html",
		"browser_style": true
	},
	"permissions": [
		"storage",
		"tabs",
		"activeTab"
	],
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "addon@example.com",
			"strict_min_version": "42.0"
		}
	}
}
